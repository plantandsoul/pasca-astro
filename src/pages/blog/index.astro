---
import PageLayout from '../../layouts/PageLayout.astro';
import { fetchStrapi } from '../../lib/strapi';

const posts = await fetchStrapi('blog-posts');
---

<PageLayout title="blog">
  <ul>
    {posts.map(post => (
      <li>
        <a href={`/blog/${post.slug}`}>{post.title}</a>
      </li>
    ))}
  </ul>
</PageLayout>
